#!/usr/bin/env sh
# Commit message hook - Created by Balaji Koneti
. "$(dirname -- "$0")/_/husky.sh"

# Check commit message format
commit_regex='^(feat|fix|docs|style|refactor|test|chore|ci|perf|build|revert)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Invalid commit message format!"
    echo "ğŸ“ Use format: type(scope): description"
    echo "ğŸ“‹ Types: feat, fix, docs, style, refactor, test, chore, ci, perf, build, revert"
    echo "ğŸ’¡ Example: feat(auth): add JWT token validation"
    exit 1
fi

echo "âœ… Commit message format is valid!"
